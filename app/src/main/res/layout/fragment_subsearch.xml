<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:text="Please choose one optionï¼š"
        android:textSize="18sp"
        android:layout_height="wrap_content" />
    <RadioGroup
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/low"
            android:text="Low Calories 300"
            android:checked="true"
            android:layout_margin="5dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/mid"
            android:text="Mid Calories 500"
            android:checked="true"
            android:layout_margin="5dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/high"
            android:text="High Calories 700"
            android:layout_margin="5dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/calorie"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calories" />

        <EditText
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name    " />

        <EditText
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="30dp">

        <Button
            android:id="@+id/beef"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Beef"
            android:textSize="18sp" />

        <Button
            android:id="@+id/cabbage"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Cabbage"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="30dp">

        <Button
            android:id="@+id/cake"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Cake"
            android:textSize="18sp" />

        <Button
            android:id="@+id/biscuit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Biscuit"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="30dp">

        <Button
            android:id="@+id/bake"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Bake"
            android:textSize="18sp" />

        <Button
            android:id="@+id/boil"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Boil"
            android:textSize="18sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_search"
        android:text="Search"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>